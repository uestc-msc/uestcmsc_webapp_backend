[Unit]
Description=UESTC MSC Webapp Backend (Django)
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=1
User=lyh543
WorkingDirectory=/etc/uestcmsc_webapp/backend/
ExecStart=/usr/local/bin/gunicorn -b "127.0.0.1:8000" --access-logfile - uestcmsc_webapp_backend.wsgi

[Install]
WantedBy=multi-user.target